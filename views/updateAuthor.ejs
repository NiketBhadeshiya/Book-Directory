
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="sidebar">
           <div class="filter">
            <a onclick="window.history.back()"><p class="tab-links"><i class="fas fa-angle-double-left"></i> Back<br></p></a>
           </div>
        </div>
        <div class="margin-left update-form">
            <div class="info">
                <h2 class="text-dark">Update Author</h2>
                <span class="text-light">Use the given form to Update an Author</span>
            </div>

            <form method="POST" id="update_author">
                <div class="new_book">
                    <div class="form-group">
                        <label for="author" class="text-light">Author :</label>
                        <input type="hidden" name="id" value="<%= author._id %>">
                        <input type="text" name="author" value="<%= author.author %>">
                    </div>
                    <div class="form-group">
                        <label for="description" class="text-light">Description :</label>
                        <input type="text" name="description" value="<%= author.description%>" style="width: 300px; height: 30px;">
                        <!-- <textarea name="description" cols="30" rows="10" value="<%= author.description%>"></textarea> -->
                    </div>
            
    
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
    
                </div>
            </form>
        </div>

        
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
