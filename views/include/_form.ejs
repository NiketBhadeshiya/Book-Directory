 <!-- form handling -->
 <form action="/api/books" method="POST" enctype="multipart/form-data" id="add_book">
    <div class="new_book">
        <div class="form-group">
            <input type="text" name="isbn" placeholder="isbn" style="width:300px">
        </div>
        
        <div class="form-group">
            <input type="text" name="title" placeholder="title" style="width:300px">
        </div>
        
        <div class="form-group">
            <input type="text" id="mobile" name="author" placeholder="author" style="width:300px">
        </div>

        <div class="form-group">
            <input type="text" name="publisher" placeholder="publisher" style="width:300px">
        </div>
        <div class="form-group">
            <input type="text" name="editionNumber" placeholder="editionNumber" style="width:300px">
        </div>
        <div class="form-group">
            <input type="text" name="language" placeholder="language" style="width:300px">
        </div>
        <div class="form-group">
            <input type="file" name="bookImage" placeholder="bookImage" style="width:300px">
        </div>
        <div class="form-group">
            <input type="number" name="price" placeholder="price" style="width:300px">
        </div>
        <div class="form-group">
            <input type="number" name="page" placeholder="page" style="width:300px">
        </div>
        <div class="form-group">
            <input type="text" name="copyright" placeholder="copyright" style="width:300px">
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>


